#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/wait.h>

int main() {
  int pid = fork();
  if (pid) {
    int wstatus = 0;
    if(waitpid(pid, &wstatus, 0) == 1) {
      perror("waitpid");
      exit(1);
    }
  } else {
    char *args[] = {"/bin/ls", "-a", "-l", "-h", NULL};
    execv("/bin/ls", args);
  }
}

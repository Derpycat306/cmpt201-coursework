#include <stdio.h>
#include <stdlib.h>
#include <wait.h>
#include <unistd.h>

int main() {
  int pid = fork();
  if (pid) {
    int wstatus = 0;
    if (waitpid(pid, &wstatus, 0) == 1) {
      perror("waitpid");
      exit(1);
    }

    if(WIFEXITED(wstatus)) {
      printf("child done with exit status: %d/n", WEXITSTATUS(wstatus));
    }
  } else {
    char *args[] = {"/bin/ls", "-a", "-l", "-h", NULL};
    execv("/bin/ls", args);
  }
}
